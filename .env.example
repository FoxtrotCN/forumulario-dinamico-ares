# Configuración de Ejemplo para Sistema de Formularios
# Copiar este archivo como .env y personalizar los valores

# Configuración de Flask
SECRET_KEY=tu-clave-secreta-muy-segura-aqui
FLASK_ENV=development
FLASK_DEBUG=True

# Base de Datos
DATABASE_PATH=database/formulario_clientes.db

# Configuración de Archivos
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=5242880  # 5MB en bytes

# Configuración de Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de Seguridad
ALLOWED_EXTENSIONS=docx,pdf,jpg,jpeg,png,gif
MAX_FILE_SIZE=5  # MB

# URLs y Dominios
BASE_URL=http://localhost:5000
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de Validaciones
ENABLE_NIF_VALIDATION=True
ENABLE_IBAN_VALIDATION=True
ENABLE_EMAIL_VALIDATION=True

# Configuración de Formulario
STEPS_COUNT=6
AUTO_SAVE_INTERVAL=30  # segundos

